{
    "compilerOptions": {

        "allowJs": true,
        "baseUrl": "./",
        "checkJs": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "outDir": "types",
        "paths": {

            "actors/*": ["sources/actors/*"],
            "stages/*": ["sources/stages/*"]
        },
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": false,
        "target": "esnext"
    },
    "exclude": [

        "distribution"
    ],
    "include": [

        "node_modules/@theatrejs/plugin-aseprite",
        "node_modules/@theatrejs/theatrejs",

        "sources/**/*.js",
        "sources/types/**/*.d.ts",
        "sources/types/**/*.jsdoc.js",
    ]
}
